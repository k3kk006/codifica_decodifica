<body>

<div class="container">
  <h2>Codifica / Decodifica</h2>
  <textarea id="inputText" placeholder="Scrivi il tuo testo qui..." rows="4"></textarea>
  <input type="text" id="key" placeholder="Inserisci la key">
  <button onclick="encode()">Codifica</button>
  <button onclick="decode()">Decodifica</button>
  <textarea id="outputText" placeholder="Risultato..." rows="4" readonly></textarea>
</div>

<script>
  function encode() {
    var text = document.getElementById('inputText').value;
    var key = document.getElementById('key').value;
    if (!key) {
      alert("Inserisci una key!");
      return;
    }
    var encoded = text.split('').map((c) => String.fromCharCode(c.charCodeAt(0) + key.length)).join('');
    document.getElementById('outputText').value = encoded;
  }

  function decode() {
    var text = document.getElementById('inputText').value;
    var key = document.getElementById('key').value;
    if (!key) {
      alert("Inserisci una key!");
      return;
    }
    var decoded = text.split('').map((c) => String.fromCharCode(c.charCodeAt(0) - key.length)).join('');
    document.getElementById('outputText').value = decoded;
  }
</script>

</body>
